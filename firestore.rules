rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // =========================================================================
    // VIBESTREAM CORE SECURITY PROTOCOL v5.6 [GLOBAL_EN_GB]
    // =========================================================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isUser(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // =========================================================================
    // SYSTEM INFRASTRUCTURE: SETTINGS & CONFIGURATION
    // =========================================================================
    
    match /settings/{settingId} {
      // Required for maintenance mode detection and registration locks on landing
      allow read: if true;
      // Only Citadel Admins can modify global infrastructure parameters
      allow write: if isAdmin();
    }

    // =========================================================================
    // IDENTITY CLUSTERS: USER PROFILES & ACCESS
    // =========================================================================

    match /users/{userId} {
      // Anyone logged in can view profiles
      allow read: if isAuthenticated();
      
      // Allow user to create their own initial profile
      // This allows the bootstrapping logic in App.tsx to succeed
      allow create: if isUser(userId);
      
      // Allow updates by owner or admin
      // Prevents members from promoting themselves to admin after creation
      allow update: if (isUser(userId) && 
        (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'verifiedHuman']))) 
        || isAdmin()
        || (isAuthenticated() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['followers', 'following', 'lastActionTimestamp']));

      match /following/{targetId} {
        allow read: if isAuthenticated();
        allow write: if isUser(userId) || isAdmin();
      }

      match /followers/{followerId} {
        allow read: if isAuthenticated();
        allow write: if isUser(followerId) || isAdmin();
      }
    }

    // =========================================================================
    // TRANSMISSION GRID: POSTS & CONTENT
    // =========================================================================

    match /posts/{postId} {
      allow read: if isAuthenticated();
      
      // Removed complex rate limiting for creation to prevent sync failures
      allow create: if isAuthenticated() && 
        request.resource.data.authorId == request.auth.uid;
      
      allow update: if isAuthenticated() && (
        resource.data.authorId == request.auth.uid || 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'comments', 'shares']) ||
        isAdmin()
      );
      
      allow delete: if isAuthenticated() && (resource.data.authorId == request.auth.uid || isAdmin());
    }

    // =========================================================================
    // TEMPORAL FRAGMENTS: STORIES
    // =========================================================================

    match /stories/{storyId} {
      // Authenticated nodes can view the temporal fragment stream
      allow read: if isAuthenticated();
      
      // Only the author can publish a new story fragment
      allow create: if isAuthenticated() && 
        request.resource.data.authorId == request.auth.uid;
        
      // Deletion restricted to author or admin control
      allow delete: if isAuthenticated() && (
        resource.data.authorId == request.auth.uid || 
        isAdmin()
      );

      // Updates generally not permitted for immutable fragments, except by admin
      allow update: if isAdmin();
    }

    // =========================================================================
    // NEURAL NOTIFICATIONS SYSTEM
    // =========================================================================

    match /notifications/{notificationId} {
      allow read, update, delete: if isAuthenticated() && resource.data.toUserId == request.auth.uid;
      allow create: if isAuthenticated();
    }

    // =========================================================================
    // REAL-TIME NEURAL COMMS (MESSAGING)
    // =========================================================================

    match /chats/{chatId} {
      allow read: if isAuthenticated() && request.auth.uid in resource.data.participants;
      allow create: if isAuthenticated() && request.auth.uid in request.resource.data.participants;
      allow update: if isAuthenticated() && request.auth.uid in resource.data.participants;
      
      match /messages/{messageId} {
        allow read, create, update: if isAuthenticated();
      }
    }
    
    // =========================================================================
    // SAFETY PROTOCOLS: REPORTING & MODERATION
    // =========================================================================
    
    match /reports/{reportId} {
      allow create: if isAuthenticated();
      allow read, update, delete: if isAdmin();
    }
  }
}